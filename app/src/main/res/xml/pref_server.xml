<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="pref_server_settings"
        android:title="Server settings">

        <EditTextPreference
            android:defaultValue="@string/pref_default_host_name"
            android:key="pref_host_name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="CSE host name or IP address"/>

        <EditTextPreference
            android:defaultValue="@string/pref_default_cse_name"
            android:key="pref_cse_name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="CSE name"/>

        <EditTextPreference
            android:defaultValue="@string/pref_default_user_name"
            android:key="pref_user_name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="User name"/>

        <EditTextPreference
            android:defaultValue="@string/pref_default_password"
            android:inputType="textPassword"
            android:key="pref_password"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="********"
            android:title="Password"/>

    </PreferenceCategory>

</PreferenceScreen>
