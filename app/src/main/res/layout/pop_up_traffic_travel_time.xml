<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cars_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:src="@drawable/cars_pop_up_icon"/>

    <TextView
        android:id="@+id/cars_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cars_image_view"
        android:layout_toRightOf="@id/cars_image_view"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cars_image_view"
        android:textColor="#808080"
        android:textSize="12sp"/>

</RelativeLayout>