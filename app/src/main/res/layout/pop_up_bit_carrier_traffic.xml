<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sign_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/traffic_flow"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_text_view"
        android:textColor="#404040"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/elapsed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_text_view"
        android:drawableLeft="@drawable/cars_pop_up_icon"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textColor="#404040"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/speed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/elapsed_text_view"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/cars_pop_up_icon"
        android:drawablePadding="8dp"
        android:textColor="#404040"
        android:textSize="14sp"
        android:textStyle="bold"/>

</RelativeLayout>